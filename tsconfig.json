{
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "es2022",
        "lib": ["es2022", "dom", "WebWorker"],
        "sourceMap": true,
        "inlineSources": true,
        "module": "es2020",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "playcanvas": ["node_modules/playcanvas/build/playcanvas"],
            "pcui": ["node_modules/@playcanvas/pcui"]
        }
    },
    "include": ["./src/**/*.ts", "src/gaze/shaders/target_editor-shader.ts"],
    "exclude": ["node_modules", "dist", "submodules"]
}
